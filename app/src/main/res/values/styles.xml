<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="TextInputLabel" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Theme.SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/color_white</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.framgia.fbook.screen.addCategoryFavorite.ItemAddCategoryFavoriteViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/check_favorite"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dp_16"
                android:checked="@{viewModel.category.favorite}"
                android:gravity="center_vertical"
                android:onClick="@{viewModel::onItemClickCategory}"
                android:src="@android:color/darker_gray"
                app:allow_random_color="false"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:siShape="@raw/heart"
                />
            <LinearLayout
                android:id="@+id/layout_text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/check_favorite"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseCompoundDrawables"
                >
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dp_3"
                    android:padding="@dimen/dp_2"
                    app:srcCompat="@drawable/ic_circle"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_3"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{viewModel.category.name}"
                    android:textColor="@color/color_dark_gray_mos"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/checkbox_favorite"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/text_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@{viewModel.category.description}"
                android:textColor="@color/color_dark_gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/check_favorite"
                app:layout_constraintTop_toBottomOf="@+id/layout_text_title"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/color_white_light"
                app:layout_constraintTop_toBottomOf="@+id/text_description"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>

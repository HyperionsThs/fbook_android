<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.fbook.screen.profile.ProfileActivity"
            />
        <import type="android.view.View"/>

    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            >

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    >
                    <android.support.design.widget.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_background"
                        app:contentScrim="?attr/colorPrimary"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        >
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_profile_user"
                            android:paddingBottom="@dimen/dp_50"
                            app:layout_collapseMode="parallax"
                            >
                            <FrameLayout
                                android:id="@+id/frame_layout_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:padding="@dimen/dp_2"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                >
                                <ImageView
                                    android:layout_width="@dimen/dp_150"
                                    android:layout_height="@dimen/dp_150"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_user_xml"
                                    tools:ignore="ContentDescription"
                                    />
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="@dimen/dp_150"
                                    android:layout_height="@dimen/dp_150"
                                    android:layout_gravity="center"
                                    app:civ_border_color="@color/color_white_light"
                                    app:civ_border_width="@dimen/dp_1"
                                    app:imageUserUrl="@{viewModel.mUser.avatar}"
                                    tools:ignore="ContentDescription"
                                    />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/text_name_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="@dimen/dp_2"
                                android:fontFamily="serif"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dp_2"
                                android:text="@{viewModel.mUser.name}"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp_25"
                                app:layout_constraintTop_toBottomOf="@+id/frame_layout_image"
                                tools:ignore="MissingConstraints"
                                tools:layout_editor_absoluteX="0dp"
                                />

                            <FrameLayout
                                android:id="@+id/layout_button_follow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp_2"
                                android:layout_weight="1"
                                android:padding="@dimen/dp_5"
                                android:visibility="@{viewModel.mIsVisibleLayoutButtonFollow ? View.VISIBLE : View.GONE}"
                                app:layout_constraintTop_toBottomOf="@+id/text_name_user"
                                >
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/color_gray_view"
                                    />
                                <Button
                                    android:layout_width="@dimen/dp_150"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_click_blue"
                                    android:onClick="@{viewModel::onClickFollowOrUnFollowUser}"
                                    android:paddingEnd="@dimen/dp_35"
                                    android:paddingLeft="@dimen/dp_35"
                                    android:paddingRight="@dimen/dp_35"
                                    android:paddingStart="@dimen/dp_35"
                                    android:text="@string/unfollow"
                                    android:textColor="@color/color_white"
                                    android:visibility="@{viewModel.mIsVisibleButtonFollow ? View.VISIBLE : View.GONE}"
                                    tools:ignore="TooDeepLayout,UselessParent"
                                    />
                                <Button
                                    android:layout_width="@dimen/dp_150"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_green_follow"
                                    android:onClick="@{viewModel::onClickFollowOrUnFollowUser}"
                                    android:paddingEnd="@dimen/dp_35"
                                    android:paddingLeft="@dimen/dp_35"
                                    android:paddingRight="@dimen/dp_35"
                                    android:paddingStart="@dimen/dp_35"
                                    android:text="@string/follow"
                                    android:textColor="@color/color_white"
                                    android:visibility="@{viewModel.mIsVisibleButtonFollow ? View.GONE : View.VISIBLE}"
                                    tools:ignore="UselessParent"
                                    />
                            </FrameLayout>

                        </android.support.constraint.ConstraintLayout>
                        <android.support.v7.widget.Toolbar
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            app:layout_collapseMode="pin"
                            >
                            <ImageView
                                android:id="@+id/image_right_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{() -> viewModel.onClickArrowBack()}"
                                android:paddingBottom="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_10"
                                app:srcCompat="@drawable/ic_back"
                                tools:ignore="ContentDescription,RtlSymmetry"
                                />
                        </android.support.v7.widget.Toolbar>
                        <android.support.design.widget.TabLayout
                            android:id="@+id/tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@color/colorPrimary"
                            app:layout_goneMarginTop="@dimen/dp_3"
                            app:tabIndicatorColor="@color/color_white"
                            app:tabSelectedTextColor="@android:color/white"
                            app:tabTextColor="@color/color_white_translate_light"
                            bind:setViewPager="@{viewpager}"
                            />
                    </android.support.design.widget.CollapsingToolbarLayout>
                </android.support.design.widget.AppBarLayout>
                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_white_light"
                    android:fillViewport="true"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tab_layout"
                        >

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_10"
                            android:padding="@dimen/dp_8"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/dp_5"
                                android:paddingTop="@dimen/dp_7"
                                android:weightSum="5"
                                tools:ignore="DisableBaselineAlignment"
                                >
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:onClick="@{() -> viewModel.onClickSharing()}"
                                    android:orientation="vertical"
                                    tools:ignore="TooDeepLayout"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:textColor="@color/color_white"
                                        android:textSize="@dimen/sp_13"
                                        bind:setSize="@{viewModel.mNumberOfSharing}"
                                        tools:ignore="TooDeepLayout"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/sharing"
                                        />
                                </LinearLayout>
                                <View
                                    android:layout_width="@dimen/dp_1"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:background="@color/color_red_mos"
                                    />
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:onClick="@{() -> viewModel.onClickReading()}"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:textColor="@color/color_white"
                                        android:textSize="@dimen/sp_13"
                                        bind:setSize="@{viewModel.mNumberOfReading}"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/reading"
                                        />
                                </LinearLayout>
                                <View
                                    android:layout_width="@dimen/dp_1"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:background="@color/color_red_mos"
                                    />
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:onClick="@{() -> viewModel.onClickWaiting()}"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:textColor="@color/color_white"
                                        android:textSize="@dimen/sp_13"
                                        bind:setSize="@{viewModel.mNumberOfWaiting}"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/waiting"
                                        />
                                </LinearLayout>
                                <View
                                    android:layout_width="@dimen/dp_1"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:background="@color/color_red_mos"
                                    />
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:onClick="@{() -> viewModel.onClickReturned()}"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:textColor="@color/color_white"
                                        android:textSize="@dimen/sp_13"
                                        bind:setSize="@{viewModel.mNumberOfReturned}"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/returned"
                                        />
                                </LinearLayout>
                                <View
                                    android:layout_width="@dimen/dp_1"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:background="@color/color_red_mos"
                                    />
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:onClick="@{() -> viewModel.onClickReview()}"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:textColor="@color/color_white"
                                        android:textSize="@dimen/sp_13"
                                        bind:setSize="@{viewModel.mNumberOfReview}"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/review"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"
                            android:padding="@dimen/dp_1"
                            app:offscreenPageLimit="@{viewModel.mPageLimit}"
                            bind:viewPageAdapter="@{viewModel.profileAdapter}"
                            />
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </android.support.design.widget.CoordinatorLayout>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white_light"
            android:onClick="@{viewModel::onClickReloadData}"
            android:visibility="@{viewModel.MIsVisibleLayoutNoData ? View.VISIBLE : View.GONE}"
            >
            <include
                layout="@layout/layout_no_data"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>

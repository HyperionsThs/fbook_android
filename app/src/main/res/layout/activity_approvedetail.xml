<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.fbook.screen.approverequest.approvedetail.ApproveDetailActivity"
            />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp"
            >
            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    >
                    <android.support.v7.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        app:layout_collapseMode="parallax"
                        app:popupTheme="@style/AppTheme.PopupOverlay"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{() -> viewModel.onClickArrowBack()}"
                            android:paddingBottom="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_10"
                            app:srcCompat="@drawable/md_nav_back"
                            tools:ignore="ContentDescription,RtlSymmetry"
                            />
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8"
                                android:layout_marginStart="@dimen/dp_8"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="@{viewModel.mBook.title}"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp_18"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.039"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/image_search"
                                app:layout_constraintTop_toTopOf="parent"
                                />
                            <ImageView
                                android:id="@+id/image_search"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:onClick="@{() -> viewModel.onClickSearch()}"
                                android:src="@drawable/ic_search_grey"
                                android:tint="@color/color_white"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.979"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0"
                                tools:ignore="ContentDescription"
                                />
                        </android.support.constraint.ConstraintLayout>
                    </android.support.v7.widget.Toolbar>
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <com.framgia.fbook.widget.view.ImageViewLabel
                            android:id="@+id/image_cover"
                            android:layout_width="@dimen/dp_130"
                            android:layout_height="@dimen/dp_170"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:setDistanceLabel="@{2}"
                            app:updateText="@{viewModel.mBook.office.name}"
                            bind:imageUrl="@{viewModel.mCoverBook}"
                            tools:ignore="ContentDescription"
                            />
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginStart="@dimen/dp_16"
                            app:layout_constraintBottom_toBottomOf="@id/image_cover"
                            app:layout_constraintLeft_toRightOf="@+id/image_cover"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >
                            <TextView
                                android:id="@+id/text_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{viewModel.mBook.title}"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/sp_17"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />
                            <TextView
                                android:id="@+id/text_title_author"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@string/author_two_dots"
                                android:textColor="@android:color/black"
                                android:textStyle="italic"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_title"
                                />
                            <TextView
                                android:id="@+id/text_author"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginStart="@dimen/dp_8"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{viewModel.mBook.author}"
                                android:textColor="@color/color_black"
                                app:layout_constraintLeft_toRightOf="@+id/text_title_author"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_title"
                                app:layout_constraintTop_toTopOf="@+id/text_title_author"
                                />
                            <TextView
                                android:id="@+id/text_title_count_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/view_count"
                                android:textColor="@android:color/black"
                                android:textStyle="italic"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/text_author"
                                />
                            <TextView
                                android:id="@+id/text_count_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginStart="@dimen/dp_8"
                                android:text="@{String.valueOf(viewModel.mBook.countView)}"
                                android:textColor="@color/color_black"
                                app:layout_constraintLeft_toRightOf="@+id/text_title_count_view"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_author"
                                app:layout_constraintTop_toTopOf="@+id/text_title_count_view"
                                />
                            <TextView
                                android:id="@+id/text_tile_publish_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/publish_date_two_dots"
                                android:textColor="@android:color/black"
                                android:textStyle="italic"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_count_view"
                                />
                            <TextView
                                android:id="@+id/text_publish_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginStart="@dimen/dp_8"
                                android:text="@{viewModel.mBook.publishDate}"
                                android:textColor="@color/color_black"
                                app:layout_constraintLeft_toRightOf="@+id/text_tile_publish_date"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/text_tile_publish_date"
                                />
                            <TextView
                                android:id="@+id/text_tile_rating"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/ranking"
                                android:textColor="@android:color/black"
                                android:textStyle="italic"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_publish_date"
                                />
                            <TextView
                                android:id="@+id/text_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginStart="@dimen/dp_8"
                                android:text="@{String.valueOf(viewModel.mBook.avgStar)}"
                                android:textColor="@color/color_black"
                                app:layout_constraintLeft_toRightOf="@+id/text_tile_rating"
                                app:layout_constraintTop_toTopOf="@+id/text_tile_rating"
                                />
                            <ImageView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginStart="@dimen/dp_8"
                                app:layout_constraintBottom_toBottomOf="@id/text_rating"
                                app:layout_constraintLeft_toRightOf="@+id/text_rating"
                                app:layout_constraintTop_toTopOf="@id/text_rating"
                                app:srcCompat="@drawable/ic_star_24dp"
                                tools:ignore="ContentDescription"
                                />
                        </android.support.constraint.ConstraintLayout>
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        app:layout_goneMarginTop="@dimen/dp_3"
                        app:tabIndicatorColor="@color/colorPrimary"
                        app:tabSelectedTextColor="@color/colorPrimary"
                        app:tabTextColor="@color/colorAccent"
                        bind:setViewPager="@{viewpager}"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_1"
                    bind:viewPageAdapter="@{viewModel.mApproveDetailAdapter}"
                    />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>

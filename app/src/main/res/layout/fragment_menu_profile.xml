<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.fbook.screen.menuprofile.MenuProfileFragment"
            />
        <import type="android.view.View"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            >

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_250"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    >
                    <android.support.design.widget.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_background"
                        app:contentScrim="?attr/colorPrimary"
                        >
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_250"
                            >
                            <FrameLayout
                                android:id="@+id/frame_layout_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:padding="@dimen/dp_2"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                >
                                <ImageView
                                    android:layout_width="@dimen/dp_150"
                                    android:layout_height="@dimen/dp_150"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_user_xml"
                                    tools:ignore="ContentDescription"
                                    />
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="@dimen/dp_150"
                                    android:layout_height="@dimen/dp_150"
                                    android:layout_gravity="center"
                                    app:civ_border_color="@color/color_white_light"
                                    app:civ_border_width="@dimen/dp_1"
                                    app:imageUserUrl="@{viewModel.mUser.avatar}"
                                    tools:ignore="ContentDescription"
                                    />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/text_name_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="@dimen/dp_2"
                                android:layout_marginTop="@dimen/dp_8"
                                android:fontFamily="serif"
                                android:gravity="center"
                                android:text="@{viewModel.mUser.name}"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/sp_25"
                                app:layout_constraintTop_toBottomOf="@+id/frame_layout_image"
                                tools:ignore="MissingConstraints"
                                tools:layout_editor_absoluteX="0dp"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@drawable/border_background"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_name_user"
                                />
                        </android.support.constraint.ConstraintLayout>
                    </android.support.design.widget.CollapsingToolbarLayout>
                </android.support.design.widget.AppBarLayout>
                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/color_white"
                    android:fillViewport="true"
                    android:scrollbars="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/text_name_user"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="0dp"
                        >
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_click_white"
                            android:onClick="@{() -> viewModel.onClickProfile()}"
                            >
                            <ImageView
                                android:id="@+id/image_profile"
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:padding="@dimen/dp_5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_male_user"
                                tools:ignore="ContentDescription"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginStart="@dimen/dp_16"
                                android:background="@android:color/transparent"
                                android:fontFamily="serif"
                                android:gravity="center_vertical"
                                android:text="@string/profile"
                                android:textAllCaps="false"
                                android:textColor="@color/color_dark_gray"
                                android:textSize="@dimen/sp_18"
                                app:layout_constraintLeft_toRightOf="@+id/image_profile"
                                app:layout_constraintRight_toLeftOf="@+id/image_right_arrow_profile"
                                />
                            <ImageView
                                android:id="@+id/image_right_arrow_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_right"
                                tools:ignore="ContentDescription"
                                />
                        </android.support.constraint.ConstraintLayout>
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_click_white"
                            android:onClick="@{() -> viewModel.onClickApproveRequest()}"
                            >
                            <ImageView
                                android:id="@+id/image_approve_request"
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:padding="@dimen/dp_5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_approve"
                                tools:ignore="ContentDescription"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginStart="@dimen/dp_16"
                                android:background="@android:color/transparent"
                                android:fontFamily="serif"
                                android:gravity="center_vertical"
                                android:text="@string/approve_request"
                                android:textAllCaps="false"
                                android:textColor="@color/color_dark_gray"
                                android:textSize="@dimen/sp_18"
                                app:layout_constraintLeft_toRightOf="@+id/image_approve_request"
                                app:layout_constraintRight_toLeftOf="@+id/image_right_arrow_approve_request"
                                />
                            <ImageView
                                android:id="@+id/image_right_arrow_approve_request"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_right"
                                tools:ignore="ContentDescription"
                                />
                        </android.support.constraint.ConstraintLayout>
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_click_white"
                            android:onClick="@{() -> viewModel.onClickShareBook()}"
                            >
                            <ImageView
                                android:id="@+id/image_share_book"
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:padding="@dimen/dp_5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_share"
                                tools:ignore="ContentDescription"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginStart="@dimen/dp_16"
                                android:background="@android:color/transparent"
                                android:fontFamily="serif"
                                android:gravity="center_vertical"
                                android:text="@string/share_book"
                                android:textAllCaps="false"
                                android:textColor="@color/color_dark_gray"
                                android:textSize="@dimen/sp_18"
                                app:layout_constraintLeft_toRightOf="@+id/image_share_book"
                                app:layout_constraintRight_toLeftOf="@+id/image_right_arrow_share_book"
                                />
                            <ImageView
                                android:id="@+id/image_right_arrow_share_book"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_right"
                                tools:ignore="ContentDescription"
                                />
                        </android.support.constraint.ConstraintLayout>
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_click_white"
                            android:onClick="@{() -> viewModel.onClickSetting()}"
                            >
                            <ImageView
                                android:id="@+id/image_setting"
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:padding="@dimen/dp_5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_setting"
                                tools:ignore="ContentDescription"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginStart="@dimen/dp_16"
                                android:background="@android:color/transparent"
                                android:fontFamily="serif"
                                android:gravity="center_vertical"
                                android:text="@string/setting"
                                android:textAllCaps="false"
                                android:textColor="@color/color_dark_gray"
                                android:textSize="@dimen/sp_18"
                                app:layout_constraintLeft_toRightOf="@+id/image_setting"
                                app:layout_constraintRight_toLeftOf="@+id/image_right_setting"
                                />
                            <ImageView
                                android:id="@+id/image_right_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_right"
                                tools:ignore="ContentDescription"
                                />
                        </android.support.constraint.ConstraintLayout>
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_click_white"
                            android:onClick="@{() -> viewModel.onClickSignOut()}"
                            >
                            <ImageView
                                android:id="@+id/image_sign_out"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:padding="@dimen/dp_5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_sign_out"
                                tools:ignore="ContentDescription"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginStart="@dimen/dp_16"
                                android:background="@android:color/transparent"
                                android:fontFamily="serif"
                                android:gravity="center_vertical"
                                android:text="@string/sign_out"
                                android:textAllCaps="false"
                                android:textColor="@color/color_dark_gray"
                                android:textSize="@dimen/sp_18"
                                app:layout_constraintLeft_toRightOf="@+id/image_sign_out"
                                app:layout_constraintRight_toLeftOf="@+id/image_right_sign_out"
                                tools:ignore="ButtonStyle"
                                />
                            <ImageView
                                android:id="@+id/image_right_sign_out"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_right"
                                tools:ignore="ContentDescription"
                                />
                        </android.support.constraint.ConstraintLayout>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </android.support.design.widget.CoordinatorLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white_light"
                android:visibility="@{viewModel.mIsVisibleLayoutNotLoggedIn? View.VISIBLE : View.GONE}"
                >
                <include
                    layout="@layout/layout_not_loggin"
                    />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.framgia.fbook.screen.categoryfavorite.ItemCategoryFavoriteViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:padding="@dimen/dp_2"
            >
            <CheckBox
                android:id="@+id/checkbox_favorite"
                android:layout_width="@dimen/dp_35"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{viewModel.category.name}"
                android:textColor="@color/color_dark_gray_mos"
                android:textSize="@dimen/sp_17"
                app:layout_constraintLeft_toRightOf="@+id/checkbox_favorite"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/text_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{viewModel.category.description}"
                android:textColor="@color/color_dark_gray"
                app:layout_constraintLeft_toRightOf="@+id/checkbox_favorite"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_title"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_margin="@dimen/dp_2"
                android:background="@color/color_white_light"
                app:layout_constraintTop_toBottomOf="@+id/text_description"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
